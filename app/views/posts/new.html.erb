<%= form_for @post do |f| %>
  
  <div class="field">
    <%= f.label :Visible %><br/>
    <%= f.check_box :visible %>
  </div>
  
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, :rows => 15, :cols => 50 %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>

  <div class="actions">
    <%= submit_tag "Insert"%>
  </div>

<% end %>
